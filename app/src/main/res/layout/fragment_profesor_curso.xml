<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modulo_Profesor_Inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PCurso.CursoFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="367dp"
        android:layout_height="729dp"
        android:background="#3E03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <TextView
            android:id="@+id/txtNCurso2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="164dp"
            android:text="@string/txtNCurso2"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/divisor5"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtNCurso3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="164dp"
            android:text="@string/txtCurso3"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/divisor6"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/divisor4"
            android:layout_width="180dp"
            android:layout_height="8dp"

            android:layout_marginTop="28dp"
            android:layout_marginEnd="25dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.981"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TxtTPCurso" />

        <View
            android:id="@+id/divisor5"
            android:layout_width="180dp"
            android:layout_height="8dp"

            android:layout_marginTop="60dp"
            android:layout_marginEnd="25dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.981"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lv_Curso1" />

        <View
            android:id="@+id/divisor6"
            android:layout_width="180dp"
            android:layout_height="8dp"

            android:layout_marginTop="60dp"
            android:layout_marginEnd="25dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.981"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lv_Curso2" />

        <TextView
            android:id="@+id/TxtTPCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/txtPCursos"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.903"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNCurso1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="164dp"
            android:text="@string/txtNCurso1"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/divisor4"
            app:layout_constraintEnd_toEndOf="parent" />

        <ListView
            android:id="@+id/lv_Curso1"
            android:layout_width="311dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divisor4" />

        <ListView
            android:id="@+id/lv_Curso2"
            android:layout_width="311dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divisor5" />

        <ListView
            android:id="@+id/lv_Curso3"
            android:layout_width="311dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divisor6" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>